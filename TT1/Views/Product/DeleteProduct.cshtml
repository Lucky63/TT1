@model TT1.Models.Product
@{
	ViewBag.Title = "Удаление продукта";
}
<div>
	<dl class="dl-horizontal">
		<dt>Название</dt>
		<dd>
			@Html.DisplayFor(model => model.NameProduct)
		</dd>
		<dt>Описание</dt>
		<dd>
			@Html.DisplayFor(model => model.Description)
		</dd>
		<dt>Цена</dt>
		<dd>
			@Html.DisplayFor(model => model.Price)
		</dd>
	</dl>
	<div>
		<form asp-controller="Product" asp-action="DeleteProduct" method="post">
			<div class="form-group">
				<input type="submit" class="btn btn-default" value="Удалить" />
			</div>
		</form>
	</div>
</div>
